<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/logoPontoLocalizado"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_ecotech"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo EcoTech" />

    <TextView
        android:id="@+id/tvConfirmadoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ponto de Coleta Localizado"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvConfirmadoSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="com sucesso!"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnVoltarHomePonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar ao InÃ­cio"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
</LinearLayout>
