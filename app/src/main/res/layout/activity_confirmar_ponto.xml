<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/logoConfirmar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_ecotech"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo EcoTech" />

    <TextView
        android:id="@+id/tvTituloConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Ponto de Coleta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvEnderecoSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Av. Paulista, 1000 - São Paulo/SP"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnConfirmarLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Localização"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
</LinearLayout>
