<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/logoConfirmarDispositivo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_ecotech"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo EcoTech" />

    <TextView
        android:id="@+id/tvTituloConfirmarDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Dispositivo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvCodigoDetectado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CÃ³digo detectado: XYZ-123"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnConfirmarCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVoltarEscanear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
</LinearLayout>
