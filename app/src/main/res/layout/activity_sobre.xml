<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <ImageView
            android:id="@+id/logoSobre"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_ecotech"
            android:layout_marginBottom="24dp"
            android:contentDescription="Logo EcoTech" />

        <TextView
            android:id="@+id/tvTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EcoTech"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDescricaoSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicativo desenvolvido para a disciplina de Projeto Integrado, FIAP.\n\nEquipe:\n- Thiago\n- Nome 2\n- Nome 3\n\nAno: 2025"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnVoltarSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar ao InÃ­cio"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
